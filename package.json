{
  "name": "packages",
  "version": "1.0.0",
  "description": "Monorepo to host custom node modules that publish to GitHub Packages",
  "type": "module",
  "scripts": {
    "build": "nx run-many --target=build --exclude=@mikesprague/package-starter",
    "bump": "lerna version --no-private --no-push",
    "prebuild": "nx run-many --target=clean --exclude=@mikesprague/package-starter",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikesprague/packages.git"
  },
  "publishConfig": {
    "@mikesprague:registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/packages/issues"
  },
  "homepage": "https://github.com/mikesprague/packages#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/eslint-parser": "7.27.5",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "14.0.3",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.5.0",
    "lerna": "8.2.2",
    "nx": "21.2.1",
    "parcel": "2.15.2",
    "prettier": "3.5.3",
    "prettier-eslint": "16.4.2",
    "rimraf": "6.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@eslint/babel-parser",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/.history/*",
      "**/node_modules/*",
      "**/dist/*"
    ],
    "rules": {
      "import/prefer-default-export": "off",
      "no-console": "warn",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
